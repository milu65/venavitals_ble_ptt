<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorHeader</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="colorOnPrimary">@color/colorTextPrimary</item>-->
<!--        <item name="colorSecondary">@color/colorAccent</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <!-- ActionBar style -->
    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorHeader</item>
        <item name="titleTextColor">@color/colorTextPrimary</item>
        <item name="navigationIcon">@drawable/image2vector</item>
    </style>

<!--    <style name="PolarTheme" parent="Theme.AppCompat.Light.Dialog.Alert">-->
<!--        <item name="colorPrimary">@color/colorTextPrimary</item>-->
<!--        <item name="colorAccent">@color/colorTextPrimary</item>-->

<!--    </style>-->

    <style name="PolarTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

<!--    bottom style-->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/bottomNavi</item>
    </style>

<!--   button style -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
    </style>


    <!-- Custom Dialog Style -->
    <style name="MyCustomMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorDialogTheme</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="shapeAppearance">@style/CustomShapeAppearance</item>
    </style>

    <style name="CustomShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


</resources>
